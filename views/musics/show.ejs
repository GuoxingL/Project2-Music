<%- include('../partials/header') %>

<form action="/musics/<%= music._id %>?_method=DELETE" method="POST">
  <button type="submit">Delete</button>
</form>
<section id="show-page">
  <div>Title: </div>
  <div><%= music.title %></div>
  <div>Release Year: </div>
  <div><%= music.releaseYear %></div>
  <div>Style: </div>
  <div><%= music.style %></div>
  <div>Singer: </div>
  <div><%= music.singer %></div>
  <div>Quotes: </div>
  <div><%= music.quotes %></div>
  <div>Now Showing: </div>
  <div><%= music.nowShowing ? 'Yes' : 'Nope' %></div>
</section>



<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/musics/<%= music._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">⭐</option>
    <option value="2">⭐⭐</option>
    <option value="3">⭐⭐⭐</option>
    <option value="4">⭐⭐⭐⭐</option>
    <option value="5" selected>⭐⭐⭐⭐⭐</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (music.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% music.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / music.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
